{
  "version": 2,
  "buildCommand": "npm install -g typescript && npm run build",
  "outputDirectory": "apps/api/dist",
  "installCommand": "npm install",
  "functions": {
    "apps/api/src/index.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "apps/api/src/index.ts"
    }
  ]
}