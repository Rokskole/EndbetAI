{
  "version": 2,
  "buildCommand": "npm run build --workspace=apps/api",
  "outputDirectory": "apps/api/dist",
  "installCommand": "npm install",
  "functions": {
    "apps/api/dist/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/api/dist/index.js"
    }
  ]
}
