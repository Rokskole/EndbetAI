{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../../",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["../../packages/*/src"]
    }
  },
  "include": ["src/**/*", "../../packages/*/src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts"]
}
