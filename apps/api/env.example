# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Secret - CHANGE THIS IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key

# CORS Origins
ALLOWED_ORIGINS=https://your-app-domain.com,https://your-mobile-app.com

# Database URL (if using real database)
DATABASE_URL=postgresql://user:password@localhost:5432/quitbet_db

# Stripe Configuration (for Android/Web payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Apple In-App Purchase Configuration (for iOS)
APPLE_SHARED_SECRET=your_apple_shared_secret_from_app_store_connect
APPLE_BUNDLE_ID=com.quitbetai.app

